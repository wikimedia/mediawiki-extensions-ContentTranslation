<?xml version="1.0"?>
<ruleset>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="Generic.Files.OneObjectStructurePerFile.MultipleFound" />
		<exclude name="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment.NewLineComment" />
	</rule>
	<rule ref="Generic.Files.LineLength">
		<exclude-pattern>ContentTranslation\.alias\.php</exclude-pattern>
	</rule>
	<rule ref="MediaWiki.Files.ClassMatchesFilename.NotMatch">
		<exclude-pattern>*/scripts/*\.php</exclude-pattern>
	</rule>
	<file>.</file>
	<arg name="extensions" value="php" />
	<arg name="encoding" value="UTF-8" />
	<exclude-pattern type="relative">^app/*</exclude-pattern>
</ruleset>
