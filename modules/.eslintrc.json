{
	"root": true,
	"extends": [
		"wikimedia/client-es5",
		"wikimedia/jquery",
		"wikimedia/mediawiki",
		"wikimedia/jsduck"
	],
	"globals": {
		"ve": "readonly",
		"moment": "readonly",
		"Promise": "readonly"
	},
	"rules": {
		"max-len": "off",
		"no-jquery/no-global-selector": "off",
		"no-shadow": "warn",
		"compat/compat": "warn",
		"es-x/no-promise": "warn",
		"vue/no-v-text": "warn"
	}
}
